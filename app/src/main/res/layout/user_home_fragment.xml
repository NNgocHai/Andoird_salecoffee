<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        tools:ignore="MissingConstraints"
        android:background="@drawable/rounded_15dp"
        android:backgroundTint="@color/white">
        <EditText
            android:id="@+id/user_search_product"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:hint="  Tìm kiếm..." />
        <Button
            android:id="@+id/user_btnSearch"
            android:layout_marginTop="6dp"
            android:layout_width="35dp"
            android:layout_marginStart="5dp"
            android:layout_height="35dp"
            android:background="@drawable/icon_search"
            android:layout_toRightOf="@+id/user_search_product"
            />
    </RelativeLayout>
    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/home_gift"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="fitXY"
        android:src="@drawable/gifycoffe" />
<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/user_recycle_cate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
             />
</RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/user_recycle_product"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="match_parent"
 />


</LinearLayout>