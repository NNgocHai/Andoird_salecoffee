<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:padding="20dp"
    android:weightSum="10">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:id="@+id/tv_payment"
        android:text="PAYMENT"
        android:textColor="@color/title"
        android:textSize="35dp"
        android:textStyle="bold" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:orientation="horizontal"
        android:background="#DBFBFB"
        android:layout_margin="10dp">
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="55dp"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/address" />
    <EditText
        android:textColorHint="#BCB7B7"
        android:id="@+id/edt_address_payment"
        android:paddingStart="10dp"
        android:paddingLeft="10dp"
        android:hint="Address"
        android:background="@drawable/rounded_15dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:textSize="17sp"
        android:backgroundTint="#DBFBFB"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:orientation="horizontal"
        android:background="#DBFBFB"
        android:layout_margin="10dp">
        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="55dp"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/call" />
        <EditText
            android:backgroundTint="#DBFBFB"
            android:textColorHint="#BCB7B7"
            android:id="@+id/edt_phone_payment"
            android:background="@drawable/rounded_15dp"
            android:inputType="numberDecimal"
            android:paddingStart="10dp"
            android:paddingLeft="10dp"
            android:hint="Phone"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:textSize="17sp" />
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:background="#C4C8DF"
        android:id="@+id/user_RecyclerCart_payment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="7"/>

    <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:weightSum="2"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="15dp"
                android:text="Tổng tiền: "
                android:textSize="30sp"
                android:textColor="#FF9800"
                android:textStyle="bold">

            </TextView>
            <TextView
                android:id="@+id/user_total_payment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="12dp"
                android:textColor="#FF9800"
                android:text="VND"

                android:textSize="25sp">

            </TextView>
        </LinearLayout>
    <Button
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:layout_marginTop="15dp"
        android:id="@+id/btn_payment"
        android:background="@drawable/round_corner_buttom"
        android:text="Đặt hàng"
        android:textColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"

        android:id="@+id/error"
        />




</LinearLayout>