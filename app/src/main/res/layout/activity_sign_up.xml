<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@drawable/background"
    android:padding="20dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:id="@+id/sign_up"
        android:text="SIGN UP"
        android:textColor="@color/title"
        android:textSize="35dp"
        android:textStyle="bold"
        android:fontFamily="sans-serif-black"/>
    <EditText
        android:textColor="@color/white"
        android:textColorHint="#BCB7B7"
        android:id="@+id/username"
        android:paddingStart="10dp"
        android:paddingLeft="10dp"
        android:hint="Username"
        android:background="@drawable/rounded_15dp"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"

        android:textSize="17sp" />
    <EditText
        android:textColor="@color/white"
        android:textColorHint="#BCB7B7"
        android:id="@+id/email"
        android:background="@drawable/rounded_15dp"
        android:inputType="textEmailAddress"
        android:paddingStart="10dp"
        android:paddingLeft="10dp"
        android:hint="Email"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:textSize="17sp" />
    <EditText
        android:textColor="@color/white"
        android:id="@+id/password"
        android:background="@drawable/rounded_15dp"
        android:paddingStart="10dp"
        android:paddingLeft="10dp"
        android:hint="Password"
        android:inputType="textPassword"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:textColorHint="#BCB7B7"
        android:textSize="17sp" />
    <EditText
        android:textColor="@color/white"
        android:id="@+id/confirm_password"
        android:background="@drawable/rounded_15dp"
        android:paddingStart="10dp"
        android:paddingLeft="10dp"
        android:hint="Confirm Password"
        android:inputType="textPassword"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:textColorHint="#BCB7B7"
        android:textSize="17sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">
        <Button
            android:id="@+id/take_photo_btn"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:background="#00000000"
            android:textColor="@color/white"
            android:layout_centerVertical="true"
            android:text="Take a photo"/>
        <ImageView
            android:id="@+id/image_sign_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/take_photo_btn"
            android:layout_marginLeft="30dp"
            android:background="@drawable/ic_baseline_image_24"
            android:scaleType="centerCrop"/>


    </RelativeLayout>
    <Button
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:layout_marginTop="20dp"
        android:id="@+id/sign_up_btn"
        android:background="@drawable/round_corner_buttom"
        android:text="sign up"
        android:textColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_gravity="center"/>
    <Button
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:layout_marginTop="15dp"
        android:id="@+id/back_login_btn"
        android:background="@drawable/round_corner_buttom"
        android:text="Login"
        android:textColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_gravity="center"
        android:backgroundTint="#BCB7B7"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"

        android:id="@+id/error"
        />




</LinearLayout>