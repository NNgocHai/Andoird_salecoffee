<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_margin="10dp"
    android:background="@drawable/rounded_15dp"
    android:backgroundTint="@color/white"
    >
    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/img_contact"
        android:src="@drawable/cappuccino"
        android:scaleType="fitXY"/>
    <LinearLayout
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/teal_700"
            android:text="Item Name"
            android:id="@+id/name_product_admin"
            android:textSize="20dp"
            android:layout_gravity="center"
            android:fontFamily="sans-serif-black" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="10">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="Status"
                android:id="@+id/status_product_admin"
                android:textSize="18dp"
                android:layout_weight="3"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textColor="@color/black"
                android:text="Price"
                android:id="@+id/price_product_admin"
                android:textSize="18dp"
                android:layout_weight="7"/>
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:gravity="end"
        android:layout_width="100dp"
        android:layout_height="match_parent">

        <ImageButton
            android:id="@+id/update_admin"
            android:layout_gravity="center"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="fitXY"
            android:src="@drawable/update"
            android:background="@color/white"/>

        <ImageButton
            android:id="@+id/delete_admin"
            android:layout_gravity="center"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="fitXY"
            android:src="@drawable/remove"
            android:layout_margin="8dp"
            android:background="@color/white"/>
    </LinearLayout>


</LinearLayout>